!!!
%html
  %head
    %meta{ name: "viewport", content: "width=1024" }
    %title= content_for?(:title) ? yield(:title) : "ClickSwapper"
    %meta{:content => content_for?(:description) ? yield(:description) : "FindMe.Jobs", :name => "description"}
      = stylesheet_link_tag "application", :media => "all"
      = javascript_include_tag "application"
      = csrf_meta_tags
      = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    .container-narrow
      = yield
    #bg
      = image_tag "bg.jpg", alt: "Background"